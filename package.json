{
  "name": "ger",
  "version": "0.1.0",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "ger": "./bin/ger"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "ast-grep": "^0.1.0",
    "bun-types": "^1.2.20",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "msw": "^2.10.5",
    "oxlint": "^1.12.0",
    "react-devtools-core": "^6.1.5",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@effect/platform": "^0.90.6",
    "@effect/platform-node": "^0.94.2",
    "@effect/schema": "^0.75.5",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "effect": "^3.17.8",
    "ink": "^6.2.2",
    "ink-box": "^2.0.0",
    "ink-select-input": "^6.2.0",
    "react": "^19.1.1"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "bun run src/cli/index.ts",
    "build": "bun build src/cli/index.ts --compile --outfile=bin/ger-binary",
    "build:bundle": "bun build src/cli/index.ts --outdir=dist --target=bun",
    "clean": "rm -f bin/ger-binary dist/index.js dist/tsconfig.tsbuildinfo",
    "install:local": "bun run build && npm link",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:coverage:check": "bun scripts/check-coverage.ts",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint src/ tests/",
    "format": "biome format --write src/ tests/",
    "format:check": "biome check src/ tests/",
    "check:all": "bun run typecheck && bun run lint && bun run format:check && bun run test:coverage"
  }
}
