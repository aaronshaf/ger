{
  "name": "ger",
  "version": "0.1.0",
  "module": "index.ts",
  "type": "module",
  "bin": {
    "ger": "./src/cli/index.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "ast-grep": "^0.1.0",
    "bun-types": "^1.2.19",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.8.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@effect/platform": "^0.90.0",
    "@effect/platform-node": "^0.94.0",
    "@effect/schema": "^0.75.5",
    "@opentui/react": "^0.1.8",
    "commander": "^14.0.0",
    "effect": "^3.17.1",
    "keytar": "^7.9.0",
    "react": "^19.1.0"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "bun run src/cli/index.ts",
    "build": "bun build src/cli/index.ts --outdir=dist --target=bun --external=keytar",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:coverage:check": "bun scripts/check-coverage.ts",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint src/ tests/",
    "format": "biome format --write src/ tests/",
